 000021 ISREDIT (X,Y) = NUMBER                                                  
 000022 IF &X = ON AND &SYSINDEX(&STR( COBOL),&STR(&Y)) > 0 THEN +              
 000023     DO                                                                  
 000024         SET COL1 = 1                                                    
